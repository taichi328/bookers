

<body>
  <h1>Books</h1>
  
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
      </tr>
    </thead>
    
    <tbody>
      <tr><% @books.each do |book| %></tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id)  %></td>
        <td><%= link_to "Destroy", book_path(book), method: :delete, data: {confirm: "Are you sureï¼Ÿ"} %></td>
    <% end %>
    </tbody>
  </table>
 <h2>New book</h2>
 
 <% if @book.errors.any? %>
  <%= @book.errors.count %> error prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
 
 <%= form_with model: @book,url:'/books',method: :post do |f| %>
  <div class="text-field">
    <div>Title</div>
    <%= f.text_field :title %>
  </div>
  
  <div class="text-area">
    <div>Body</div>
    <%= f.text_area :body %>
    </div>
    
  <div class="text-submit"><%= f.submit 'Create Book' %></div>
  <% end %>
 